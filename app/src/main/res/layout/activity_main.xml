<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESULT"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:padding="8dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="get JSON from net"
                android:onClick="clickBtn"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="get JSON from net by Path"
                android:onClick="clickBtn2"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="get method"
                android:onClick="clickBtn3"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="get method by path"
                android:onClick="clickBtn4"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="get method by Map"
                android:onClick="clickBtn5"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="post Method"
                android:onClick="clickBtn6"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="post Method by Members"
                android:onClick="clickBtn7"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="get JSON Array"
                android:onClick="clickBtn8"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="URL Test"
                android:onClick="clickBtn9"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="get Json String"
                android:onClick="clickBtn10"/>
        </LinearLayout>


    </ScrollView>

</LinearLayout>